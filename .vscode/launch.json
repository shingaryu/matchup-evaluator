      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\calc-strength-table.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Game end sim",
